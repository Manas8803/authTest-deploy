.PHONY: build deploy clean

build:
	GOOS=linux GOARCH=amd64 go build -o ./auth-service/build/main ./auth-service/cmd/main-app/main.go   
	GOOS=linux GOARCH=amd64 go build -o ./email-service/build/main ./email-service/main.go

deploy:
	cd deploy && cdk deploy

deploy-swap:
	cd deploy && cdk deploy --hotswap

clean:
	rm -rf ./auth-service/build
	rm -rf ./email-service/build